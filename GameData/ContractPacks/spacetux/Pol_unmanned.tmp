///////////////////////////////////////
//
// Unmanned Pol Flyby
//
///////////////////////////////////////

CONTRACT_TYPE
{
	name = FirstUnmannedPolFlyby
	group = SpaceTuxGroup
	title = Perform an  unmanned Pol flyby mission.

	// description = Send a probe to perform a flyby of the Pol! This will be a strong demonstration of our capabilities, and an important 'first' for our space program! 
	topic = flyby
	subject = Pol
	motivation = future landing

	notes = Complete the following:
	synopsis = Send a probe to space within the SOI of Pol
	completedMessage = You did it! We've send a probe on a Pol flyby
	agent = Space Penguins, Inc
	cancellable = false
	declinable = false
	prestige = Significant
	targetBody = Pol
	maxCompletions = 1
	maxSimultaneous = 1
	rewardScience = 25.0
	rewardReputation = 5.0
	rewardFunds = Random(18000.0, 22000.0)
	advanceFunds = Random(9000.0, 11000.0)
	// weight = 99.0

	REQUIREMENT
	{
		name = ReachSpace5841
		type = ReachSpace
	}

<REMOTETECH>

	PARAMETER
	{
		name = Sequence5841
		type = Sequence
		title = Pol Flyby

		PARAMETER
		{
			name = VesselParameterGroup5841
			type = VesselParameterGroup
			define = Pol Flyby
			PARAMETER
			{
				name = HasCrew5841
				type = HasCrew
				maxCrew = 0
				minCrew = 0
			}
			PARAMETER
			{
                                name = ReachState5841
                                type = ReachState
                                // maxAltitude = 50000
                                targetBody = Pol
			}
		}
	}
}

///////////////////////////////////////
//
// Unmanned Pol Impact
//
///////////////////////////////////////

CONTRACT_TYPE
{
	name = FirstPolImpact
	group = SpaceTuxGroup
	title = Crash a probe on Pol!
	// description = We want to get larger, clearer closeup pictures.  To do this, we need to send a probe to crash on Pol.  This will be a monumental achievement.

	topic = crash
	subject = Pol
	motivation = moar pictures

	notes = Complete the following:
	synopsis = Launch an unmanned probe and have it crash onto the Pol
	completedMessage = Future generations will remember this day.
	agent = Space Penguins, Inc
	// agent = Research & Development Department

	minExpiry = 50.0
	maxExpiry = 100.0
	// Contract deadline in days.  Default is no deadline.
	deadline = 100
	cancellable = true
	declinable = true
	prestige = Significant
	targetBody = Pol
	maxCompletions = 1
	maxSimultaneous = 1
	rewardScience = 25.0
	rewardReputation = 10.0
	rewardFunds = Random(18000.0, 22000.0)
	advanceFunds = Random(9000.0, 11000.0)
	weight = 10.0
	
	REQUIREMENT
	{
		name = ReachSpace5842
		type = ReachSpace
	}

	// If we've landed, then no need to crash a probe into it
	REQUIREMENT
	{
		name = Nolanding5842
		type = Landing
		targetBody = Pol
		invertRequirement = true
	}

<REMOTETECH>

	PARAMETER
	{
		name = VPG5842
		type = VesselParameterGroup

		PARAMETER
		{
			name = HasCrew5842
			type = HasCrew
			maxCrew = 0
			minCrew = 0
		}	
		PARAMETER
		{
			name = ReachState58421
			type = ReachState

			// Minimum and maximum altitudes.
			minAltitude = 0
			maxAltitude = 75000

			// Minimum and maximum speeds
			minSpeed = 500
			maxSpeed = 5000

			// Text to use for the parameter
			// Default Vessel State: <state details>
			//title =
		}
		PARAMETER
		{
			name = VesselDestroyed5841
			type = VesselDestroyed
			mustImpactTerrain = true
			completeInSequence = true
		}
	}
}


